{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "prepare": "husky",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3"
  },
  "engines": {
    "node": ">=22"
  },
  "name": "with-react-native-web",
  "packageManager": "yarn@1.22.19",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
