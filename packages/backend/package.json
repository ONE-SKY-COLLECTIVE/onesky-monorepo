{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js || nodemon --exec ts-node src/index.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts || ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "generate": "drizzle-kit generate:pg",
    "ts:dev": "npx ts-node-dev src/index.ts",
    "start:node": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "postgres": "^3.4.7",
    "redis": "^5.5.6",
    "@supabase/supabase-js": "^2.50.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "pg": "^8.16.0",
    "supabase": "^2.26.9",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.29.0",
    "express": "^5.1.0",
    "globals": "^16.2.0",
    "install": "^0.13.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "npm": "^11.4.2",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "ts-node-dev": "^2.0.0"
  },
  "private": true
}
